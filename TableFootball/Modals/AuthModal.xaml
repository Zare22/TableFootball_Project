<Window x:Class="TableFootball.Modals.AuthModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TableFootball.Modals"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TextBlock Text="Username:" Margin="50 0 50 0"/>
            <TextBox x:Name="txtUsername" Margin="50 0 50 0"/>
            <TextBlock Text="Password:" Margin="50 0 50 0"/>
            <PasswordBox x:Name="txtPassword" Margin="50 0 50 0"/>
            <Button Content="Login" Click="Button_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
